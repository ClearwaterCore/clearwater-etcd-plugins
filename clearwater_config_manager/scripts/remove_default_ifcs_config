local_site_name=site1
etcd_key=clearwater
. /etc/clearwater/config
. /usr/share/clearwater/utils/check-root-permissions 1

# Check we can contact `etcd`
if ! nc -z ${management_local_ip:-$local_ip} 4000
then
  echo "The Clearwater Configuration store (etcd) is not running"
  echo "Please start it before removing configuration"
  exit 2
fi

clearwater-etcdctl set /$etcd_key/$local_site_name/configuration/default_ifcs "<?xml version="1.0" encoding="UTF-8"?><DefaultIFCsSet></DefaultIFCsSet>" 2> /tmp/remove-default-ifcs-config.stderr.$$ > /tmp/remove-default-ifcs-config.stdout.$$
rc=$?

# Check the return code and log if appropriate.
if [ $rc != 0 ] ; then
  echo Unable to remove the Default IFCs                    >&2
  cat /tmp/remove-default-ifcs-config.stderr.$$             >&2
  cat /tmp/remove-default-ifcs-config.stdout.$$             >&2
fi
rm -f /tmp/remove-default-ifcs-config.stderr.$$ /tmp/remove-default-ifcs-config.stdout.$$
